.flash-box
.wrapper  
  =render 'shared/chat-side'
  
  
  .chat-main
    .main-header 
      .main-header__head   
        %h2.main-header__head__group sample
        %ul.main-header__head__text Member:
        %li.main-header__head__name masayossy
      %a{href:'edit'} 
      .header__edit Edit
    .main__messages
      = render @messages
    .form
      = form_for [@group, @message] do |f|
        .form__blank
          = f.text_field :content, class: 'form__blank__text', placeholder: 'type a message'
          .form__mask
            = f.label :image, class: 'form__mask__image' do
              = fa_icon 'picture-o', class: 'icon'
              = f.file_field :image, class: 'form__mask__hidden'
        = f.submit 'Send', class: 'form__submit'

